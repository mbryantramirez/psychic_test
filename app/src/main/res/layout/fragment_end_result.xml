<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EndResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guess_result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lobster"
            android:text="@string/guess_right"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/app_guess_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lobster"
            android:text="Psychic's guess"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/app_guess_imageview"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:foregroundGravity="center"/>

        <TextView
            android:id="@+id/your_guess_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lobster"
            android:text="Your guess"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/user_guess_imageview"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/guess_rate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lobster"
            android:text="@string/your_successful_guess_rate_textview"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>